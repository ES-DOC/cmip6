# Set paths
export CMIP6_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export CMIP6_BASH=$CMIP6_HOME/sh
export CMIP6_LIB=$CMIP6_HOME/cmip6

# ... citations
alias cmip6-citations-init-xls=$CMIP6_BASH/citations/init_xls.sh
alias cmip6-citations-generate-json=$CMIP6_BASH/citations/generate_json.sh

# ... institutes
alias cmip6-institutes-list=$CMIP6_BASH/institutes/list.sh
alias cmip6-institutes-verify-repos=$CMIP6_BASH/institutes/verify_repos.sh

# Ensure target scripts are executable.
chmod a+x $CMIP6_BASH/*.sh
chmod a+x $CMIP6_BASH/*/*.sh
chmod a+x $CMIP6_BASH/*/*/*.sh
