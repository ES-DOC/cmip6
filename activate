# --------------------------------------------------------------------
# PATHS
# --------------------------------------------------------------------

# Set paths
export CMIP6_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export CMIP6_BASH=$CMIP6_HOME/sh
export CMIP6_LIB=$CMIP6_HOME/cmip6

# Ensure target scripts are executable.
chmod a+x $CMIP6_BASH/*.sh
chmod a+x $CMIP6_BASH/*/*.sh

# --------------------------------------------------------------------
# COMMAND EXECUTION
# --------------------------------------------------------------------

# Command executor.
exec_cmd()
{
	source $CMIP6_BASH/utils.sh

	log_banner
	log $1" :: BEGINS"
	activate_venv
	log_banner

	target=$CMIP6_BASH/$2
	if [ "$3" ] && [ "$4" ] && [ "$5" ]; then
		source $target $3 $4 $5
	elif [ "$3" ] && [ "$4" ]; then
		source $target $3 $4 ""
	elif [ "$3" ]; then
		source $target $3 "" ""
	else
		source $target ""
	fi

	log_banner
	log $1" :: ENDS"
	log_banner
}

# --------------------------------------------------------------------
